sleep 2

#############################################################
# 1.Creates random number in range of 0,arrLength 
# 2.Changes wallpaper in chosen period
#############################################################
while true 
do 
  randNum=$[ $RANDOM % ${#wallpapers[@]} ]

  hyprctl hyprpaper unload all
  hyprctl hyprpaper preload ${wallpapers[randNum]}
  hyprctl hyprpaper wallpaper eDP-1,${wallpapers[randNum]}
  # Sleep takes seconds
  sleep $(( 60 * 20 ))
done