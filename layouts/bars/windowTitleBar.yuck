
(deflisten window :initial "..." "bash ~/.config/eww/scripts/get-window-title")
(defwidget window_w []
  (box :class "top-bar-widget-container"
    (label :text "${window}")
  )
)

(defwindow window_title_bar
  :monitor 0
  :geometry (geometry :x "0%"
                      :y "10px"
                      :widget "300px"
                      :height "30px"
                      :anchor "top center"
            )
  :stacking "fg"
  :exclusive true
  (window_w)
)